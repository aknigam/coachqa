<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">



	<!--<start id="param_contextConfigLocation" />-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:learnqa-service-context.xml
        </param-value>
    </context-param>
    <!--<end id="param_contextConfigLocation" />-->

    <!--<start id="listener_ContextLoaderListener" />-->
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
    <!--<end id="listener_ContextLoaderListener" />-->
        
        
  	<!-- custom components -->
	<servlet>
		<servlet-name>learnqa</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/</url-pattern>
    </servlet-mapping>
    
	<servlet-mapping>
		<servlet-name>learnqa</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>learnqa</servlet-name>
		<url-pattern>/learnqa/</url-pattern>
	</servlet-mapping>
</web-app>
